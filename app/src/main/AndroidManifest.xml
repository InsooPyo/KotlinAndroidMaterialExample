<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyoinsoo.kotlin.design.support">

    <application
        android:name=".GirlsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GirlTheme">
        <activity android:name=".GirlGroupMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GirlsMemberDetailActivity"
            android:parentActivityName=".GirlGroupMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GirlGroupMainActivity" />
        </activity>
    </application>
</manifest>